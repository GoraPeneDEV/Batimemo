        "slideFromBottom": {
          "enter": {
            "translateY": "100%",
            "opacity": 0
          },
          "exit": {
            "translateY": 0
          },
          "duration": 300
        },
        "fadeScale": {
          "enter": {
            "scale": 0.9,
            "opacity": 0
          },
          "exit": {
            "scale": 1.1,
            "opacity": 0
          },
          "duration": 250
