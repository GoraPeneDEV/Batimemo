        "easeInOut": [0.42, 0, 0.58, 1],
        "spring": "spring(damping: 0.8, stiffness: 100)"
      },

      "microInteractions": {
        "buttonPress": {
          "scale": 0.96,
          "duration": 100,
          "easing": "easeOut"
        },
        "cardPress": {
          "scale": 0.98,
          "opacity": 0.95,
          "duration": 150,
          "easing": "easeInOut"
        },
        "fabPress": {
          "scale": 0.9,
          "duration": 100,
          "easing": "spring"
        },
        "ripple": {
          "startOpacity": 0.3,
          "endOpacity": 0,
          "duration": 400,
          "easing": "easeOut"
        },
        "heartbeat": {
          "scaleSequence": [1, 1.2, 1],
          "duration": 400,
          "easing": "easeInOut"
        },
        "bounce": {
          "scaleSequence": [1, 1.1, 0.95, 1],
          "duration": 500,
          "easing": "easeInOut"
        },
        "shake": {
          "translateXSequence": [0, -10, 10, -10, 10, 0],
          "duration": 400,
          "easing": "linear"
        },
        "pulse": {
          "scaleSequence": [1, 1.05, 1],
          "opacitySequence": [1, 0.8, 1],
          "duration": 2000,
          "repeat": "infinite",
          "easing": "easeInOut"
        }
